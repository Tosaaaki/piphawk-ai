DEFAULT_PAIR=USD_JPY

# --- テクニカル指標の期間 ---
RSI_PERIOD=14
EMA_PERIOD=20
ATR_PERIOD=14
BOLLINGER_WINDOW=20
BOLLINGER_STD=2

# --- フィルター条件しきい値 ---
RSI_ENTRY_LOWER=30
RSI_ENTRY_UPPER=70
ATR_ENTRY_THRESHOLD=0.06
BAND_WIDTH_THRESH_PIPS=4
EMA_DIFF_THRESHOLD=0.3
BB_POSITION_THRESHOLD=0.8

# --- TP/SL 初期設定（単位: pips）---
INIT_TP_PIPS=40
INIT_SL_PIPS=20

# --- その他設定 ---

# --- AI クールダウン（秒）---
AI_COOLDOWN_SEC_FLAT=180
AI_COOLDOWN_SEC_OPEN=180

# --- ロット制限 (1 lot = 100 00 units) ---
MIN_TRADE_LOT=30.0
MAX_TRADE_LOT=30.0

# ローソク足の粒度（OANDA のフォーマット）
CANDLE_GRANULARITY=M5

RSI_EXIT_LOWER=25
RSI_EXIT_UPPER=75
ATR_EXIT_THRESHOLD=0.06

DISABLE_ENTRY_FILTER=false
DISABLE_EXIT_FILTER=true

EMA_FAST_PERIOD=9
EMA_SLOW_PERIOD=21

TRAIL_ENABLED=true
TRAIL_TRIGGER_PIPS=20
TRAIL_DISTANCE_PIPS=12

TRAIL_TRIGGER_MULTIPLIER=2.5
TRAIL_DISTANCE_MULTIPLIER=1.5


POSITION_REVIEW_ENABLED=true
POSITION_REVIEW_SEC=3

# --- ブレイクイーブン設定 ---
BE_TRIGGER_PIPS=15

# 早期撤退ロジック ON/OFF
EARLY_EXIT_ENABLED=true

# 建値付近とみなす許容バッファ (pips)
BREAKEVEN_BUFFER_PIPS=2

# If the AI plan has no sl_pips, use latest M5 ATR × ATR_SL_MULTIPLIER
ATR_SL_MULTIPLIER=2.0

# AIに利益確定を問い合わせる閾値（TP目標の何割以上で問い合わせるか）
AI_PROFIT_TRIGGER_RATIO=0.7

# AI判断を使った利益確定ロジックのON/OFF
AI_PROFIT_DECISION_ENABLED=true

# --- OpenAI model selection ---
AI_REGIME_MODEL=gpt-4o-mini
AI_ENTRY_MODEL=gpt-4o-mini
AI_EXIT_MODEL=gpt-4o-mini

# --- ボリューム関連 ---
VOL_MA_PERIOD=10
MIN_VOL_MA=80
MIN_VOL_M1=60

# --- 時間帯フィルター (JST) ---
QUIET_START_HOUR_JST=3   
QUIET_END_HOUR_JST=7.5   

# AI exit-override
ALLOW_AI_EXIT_OVERRIDE=true
AI_EXIT_CONF_THRESH=0.6

# 高位足（日足・4H）レベル計算のON/OFF
HIGHER_TF_ENABLED=true

# Entry cooldown period (seconds) after a position close during which new entries are skipped
ENTRY_COOLDOWN_SEC=180
# Exit check interval for periodic AI exit decision (seconds)
EXIT_CHECK_SEC=60

INVERT_ENTRY_SIDE=false

# --- AI TP/SL フィルター ---
MIN_TP_PROB=0.8        
# TP到達確率しきい値（0–1）

# --- Unified AI trade model ---
AI_TRADE_MODEL=gpt-4o-mini

# --- Limit‑order parameters ---
# ATR 比による指値エントリー閾値（0.3 = 30% ATR 以上の乖離で指値に切替）
LIMIT_THRESHOLD_ATR_RATIO=0.3

# 指値が未約定のまま見直す最大秒数（経過で再評価 or キャンセル）
MAX_LIMIT_AGE_SEC=180

# 指値価格の再調整回数の上限
MAX_LIMIT_RETRY=3

# スプレッド控除後に必要な最小 TP 幅（pips）
MIN_NET_TP_PIPS=1

# --- クールダウン設定 ---
# ボリンジャーバンド幅比とATR比
COOL_BBWIDTH_PCT=0
COOL_ATR_PCT=0

# --- ADXノートレードゾーン ---
ADX_NO_TRADE_MIN=0
ADX_NO_TRADE_MAX=0

# BB中央付近ブロック比（レンジ時）
RANGE_CENTER_BLOCK_PCT=0.5

DEFAULT_PAIR=USD_JPY

# --- テクニカル指標の期間 ---
RSI_PERIOD=14
EMA_PERIOD=20
ATR_PERIOD=14
BOLLINGER_WINDOW=20
BOLLINGER_STD=2

# --- フィルター条件しきい値 ---
RSI_ENTRY_LOWER=30
RSI_ENTRY_UPPER=70
ATR_ENTRY_THRESHOLD=0.06
BAND_WIDTH_THRESH_PIPS=4
EMA_DIFF_THRESHOLD=0.3
BB_POSITION_THRESHOLD=0.8

# --- TP/SL 初期設定（単位: pips）---
INIT_TP_PIPS=40
INIT_SL_PIPS=20

# --- その他設定 ---
AI_MODEL=gpt-4o-mini

# --- AI クールダウン（秒）---
AI_COOLDOWN_SEC_FLAT=10
AI_COOLDOWN_SEC_OPEN=10

# --- ロット制限 (1 lot = 100 000 units) ---
MIN_TRADE_LOT=40.0
MAX_TRADE_LOT=40.0

# ローソク足の粒度（OANDA のフォーマット）
CANDLE_GRANULARITY=M1

RSI_EXIT_LOWER=35
RSI_EXIT_UPPER=65
ATR_EXIT_THRESHOLD=0.04

DISABLE_ENTRY_FILTER=false
DISABLE_EXIT_FILTER=false

EMA_FAST_PERIOD=9
EMA_SLOW_PERIOD=21

TRAIL_ENABLED=true
TRAIL_TRIGGER_PIPS=20
TRAIL_DISTANCE_PIPS=12

TRAIL_DYNAMIC=true          
TRAIL_TRIGGER_MULTIPLIER=2.5
TRAIL_DISTANCE_MULTIPLIER=1.5

PIP_SIZE=0.01
RSI_EXIT_LOWER=35
RSI_EXIT_UPPER=65
ATR_EXIT_THRESHOLD=0.04

POSITION_REVIEW_ENABLED=true
POSITION_REVIEW_SEC=30

# --- ブレイクイーブン設定 ---
BE_TRIGGER_PIPS=15

# 早期撤退ロジック ON/OFF
EARLY_EXIT_ENABLED=true

# 建値付近とみなす許容バッファ (pips)
BREAKEVEN_BUFFER_PIPS=2

ATR_SL_MULTIPLIER=2.0

# AIに利益確定を問い合わせる閾値（TP目標の何割以上で問い合わせるか）
AI_PROFIT_TRIGGER_RATIO=0.5

# AI判断を使った利益確定ロジックのON/OFF
AI_PROFIT_DECISION_ENABLED=true

# --- ボリューム関連 ---
VOL_MA_PERIOD=10
MIN_VOL_MA=80
MIN_VOL_M1=60

# --- 時間帯フィルター (JST) ---
QUIET_START_HOUR_JST=3   
QUIET_END_HOUR_JST=7.5   

# AI exit-override
ALLOW_AI_EXIT_OVERRIDE=true
AI_EXIT_MODEL=gpt-4o-mini
AI_EXIT_CONF_THRESH=0.6

# 高位足（日足・4H）レベル計算のON/OFF
HIGHER_TF_ENABLED=true

# Entry cooldown period (seconds) after a position close during which new entries are skipped
ENTRY_COOLDOWN_SEC=60